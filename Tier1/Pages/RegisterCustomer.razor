@page "/RegisterCustomer"
@using Tier1.Data
@using Tier1.Model
<h3>RegisterCustomer</h3>

<EditForm Model="@newCustomerItem" OnValidSubmit="@AddNewCustomerAsync">
    <div class="form-group">
            ID:<br/>
            <InputNumber @bind-Value="@newCustomerItem.Id"/>
        </div>

<div class="form-group">
        Name:<br/>
        <InputText @bind-Value="@newCustomerItem.Name"/>
        </div>
<div class="form-group">
    Mail:<br/>
    <InputText @bind-Value="@newCustomerItem.Mail"/>
</div>
<div class="form-group">
        Password:<br/>
        <InputText @bind-Value="@newCustomerItem.Password"/>
    </div>
    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Register</button>
        </p>
</EditForm>

@code {
    private Customer newCustomerItem = new Customer();

    private void AddNewCustomerAsync()
    {
        TransferObj obj = new TransferObj();
        obj.Action = "ADD_CUSTOMER";
        obj.Arg = "customers.json";
    }
}